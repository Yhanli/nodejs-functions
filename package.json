{
  "name": "nodejs-functions",
  "version": "0.0.5",
  "description": "nodejs-functions",
  "author": "hanli <yhanl@hotmail.com> (https://github.com/Yhanli)",
  "private": false,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yhanli/nodejs-functions.git"
  },
  "main": "dist/index",
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.build.json",
    "start": "yarn build && node dist/cli.js --config .nfunc.json",
    "clean": "rimraf dist/",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "prepare": "husky install",
    "fix:husky": "chmod ug+x .husky/*"
  },
  "bin": {
    "nfunc": "dist/bin/nfunc.js"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "barrelsby": "^2.8.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "validate-branch-name": "^1.3.0"
  },
  "validate-branch-name": {
    "pattern": "^(prod|uat|qa|staging|develop|dev|release_candidate|main){1}$|^(feature|feat|fix|hotfix|ci)/([a-zA-Z0-9-_]{2,10})/([0-9]{4,}|no-ref|noref)-[a-zA-Z0-9-_]+$",
    "errorMsg": "Branch name must match this pattern = (feature|feat|fix|hotfix|ci)/yourfirstname/taskid-shortdescription, example: feat/han/9394-branch-name-check"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "cd",
          "docs",
          "feat",
          "feature",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-empty": [
        0,
        "never"
      ]
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "functions",
    "node functions",
    "node-functions",
    "nodejs-functions",
    "nodejs functions"
  ]
}
